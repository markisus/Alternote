{% extends 'main.template' %}

{% block page_specific_scripts %}
	<script type="text/javascript">
		$(document).ready(function() {
			$(".chzn-select").chosen();
		});
	</script>
{% endblock %}

{% block content %}
	<div class="twelve columns content registration">
		<h4>Let's get you and your class set up. This won't take long at all.</h4>
		<hr/>
		<p>We'd love to know a little more about you.</p> <br/>
		
		<form method="post">
			[[ form.school.label ]]
				[[ form.school(class_="chzn-select") ]]
			[[ with_errors(form.first_name) ]]
			[[ with_errors(form.last_name) ]]
			[[ with_errors(form.email) ]]
			[[ with_errors(form.password) ]]
			[[ with_errors(form.password1) ]]
			[[ form.image.label ]]
			<div id="photo">
				<img src="[[ image('default-icon-small.png') ]]" />
				[[ form.image() ]]
			</div>
			[[ form.submit() ]]
		</form>
	</div>
	
{% endblock content %}