			    <a href="http://twitter.com/alternoteam" class="social" id="twitter"></a>
			    <a href="http://blog.alternote.com" class="social" id="blog"></a>
			    <a href="mailto:team@alternote.com" class="social" id="email"></a>
			  </li>
		  </ul>
	  </div>
		<div class="twelve columns content" id="information">
			{% block information %}
			{% endblock %}
		</div>
	</div> <!-- 16 columns content end -->

{% endblock content %}