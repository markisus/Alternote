{% extends 'base.template' %}

{% block title %}Alternote Alpha{% endblock %}

{% block scripts %}
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
	<script type="text/javascript" src="[[ script('tabs.js') ]]"></script>
	<script type="text/javascript" src="[[ script('chosen.jquery.min.js') ]]"></script>
	{% block page_specific_scripts %}
	<script type="text/javascript">
		$(document).ready(function() {
			$("#dropdown-link").click(function(e) {
				e.stopPropagation();
				$(this).addClass("active");
				$(".dropdown").slideToggle();
			});
			$(".dropdown").click(function(e) {
				e.stopPropagation();
			});
			$("body").click(function(e) {
				$(".dropdown").slideUp();
			});
		});
	</script>
	{% endblock %}
{% endblock %}

{% block css %}
	<link rel="stylesheet" type="text/css" href="[[ css('base.css') ]]" />
	<link rel="stylesheet" type="text/css" href="[[ css('layout.css') ]]" />
	<link rel="stylesheet" type="text/css" href="[[ css('skeleton.css') ]]" />
	<link rel="stylesheet" type="text/css" href="[[ css('chosen.css') ]]" />
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/ui-lightness/jquery-ui.css" />
	<link rel="stylesheet" type="text/css" href="[[ css('fullcalendar.css') ]]" />
	<link rel="stylesheet" type="text/css" href="[[ css('style.css') ]]" />
	<style type="text/css">
		@-moz-document url-prefix() {
		    #index #join input[type="submit"] {
		        padding: 8px 9px;
		    }
		}
	</style>
{% endblock %}

{% block body %}
<div id="landing-wrapper">
	
	<div id="main">
   	<div class="container">
			<div id="login-button">
				<span id="dropdown-link">Login</a>
				<div class="dropdown">
					<form method="post" action="[[ reverse_url('LoginHandler')]]">
						[[ with_errors(loginForm.email) ]]
						[[ with_errors(loginForm.password) ]]
						[[ loginForm.submit() ]]
					</form>
				</div>
			</div>
			<div id="ajax-inject">
				{% block content %}
				<div class="sixteen columns content" id="index">
					<img id="main-logo" src="[[ image('logo-large.png') ]]" />
					<img id="divider" src="[[ image('landing-divider.png') ]]" />
					<div id="join">
						<p>
							Course software should be for more than <br/>
							just management. We believe real learning <br/>
							happens when students have conversations. <br/>
							<b>Alternote</b> is a course engagement system <br/>
							that makes that happen.
							<a href="/admin/school/create" class="link-blue">Create a school</a>
						</p>
						<form method="post">
							Spring learners, enter your access code
							[[ regForm.code( placeholder="Access code..." ) ]] [[ regForm.submit() ]]
						</form>
						<form method="post">
							Professors and students, sign up here
							[[ emailForm.email( placeholder="Email address..." ) ]] [[ emailForm.submit() ]]
						</form>
						<f>Confused about what we're dreaming about, what we're building, or who we are? Maybe <a href="[[ reverse_url('About') ]]">this</a> will help.</f>
					</div>
				</div> <!-- 16 columns content end -->
				{% endblock content %}
			</div>

		</div>
	</div>
	
</div> <!-- landing wrapper end -->
{% endblock %}
